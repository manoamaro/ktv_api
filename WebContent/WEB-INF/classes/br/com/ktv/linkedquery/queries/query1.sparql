PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX dbpedia: <http://dbpedia.org/property/>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX dc: <http://purl.org/dc/terms/>
PREFIX dbpedia-owl: <http://dbpedia.org/ontology/>
PREFIX movie: <http://data.linkedmdb.org/resource/movie/>
PREFIX movieontology-p: <http://www.movieontology.org/2009/10/01/movieontology.owl#>

CONSTRUCT {
	?thing rdf:type ?type ;
               rdfs:label ?label ;
               dbpedia-owl:abstract ?abstract ;
               dbpedia-owl:staring
} WHERE {
  ?thing rdfs:label ?label ;
         a ?type ;
         dbpedia-owl:abstract ?abstract .
  FILTER( ?type IN (dbpedia-owl:Film, dbpedia-owl:Musical, dbpedia-owl:TelevisionShow) ) .
  FILTER(lang(?label) IN ("en", "pt")) .
  FILTER(lang(?abstract) IN ("en", "pt")) .
  ?label <bif:contains> "{0}" .
}